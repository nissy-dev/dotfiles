{
    "editor.formatOnSave": true, // ファイル保存時にフォーマット
    "edtior.fontFamily": "HackGenNerd, Menlo, Monaco, 'Courier New', monospace",
    "editor.minimap.enabled": false, // ミニマップを非表示
    "editor.renderWhitespace": "all", // ホワイトスペース（半角スペース等）の表示
    "editor.renderControlCharacters": true, // 制御文字表示
    "editor.suggestSelection": "first", // サジェストの表示方法
    "editor.tabSize": 2,
    /* files setting */
    "files.trimTrailingWhitespace": true, // 余分なホワイトスペースを削除
    "files.insertFinalNewline": true, // ファイルの末尾は改行で終わらせる
    "files.trimFinalNewlines": true, // 保存時に最終行以降を削除
    "files.associations": {
        ".*lintrc": "json",
        "*.flow": "javascript"
    },
    /* other setting */
    "workbench.startupEditor": "none", // Welcome Page を表示しない
    "workbench.iconTheme": "material-icon-theme",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue", // 拡張機能のサジェストで上書きする
    /* markdown setting */
    "[markdown]": {
        "editor.formatOnSave": false,
        "files.trimTrailingWhitespace": false // Markdownのファイルは行末の空白をトリミングしない
    },
    /* javascript setting */
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", // フォーマッタをprettierに指定
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true // ファイル保存時にESLintでフォーマット
        }
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    /* typescript setting */
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", // フォーマッタをprettierに指定
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true // ファイル保存時にESLintでフォーマット
        }
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    /* python setting */
    "[python]": {
        "editor.tabSize": 4,
    },
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501,W503"
    ],
    "python.formatting.provider": "black",
    "python.languageServer": "Microsoft",
}
