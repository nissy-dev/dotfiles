scriptencoding utf-8

"show cusor
set ruler
"show line number
set number

"background color
set background=dark

"hilight cursorline
set cursorline

"enable syntax
syntax enable

"indent
set autoindent
set shiftwidth=2

"clipboard
set clipboard=unnamed,autoselect

"cursor movement
set whichwrap=b,s,h,l,<,>,~,[,]

"setting for backup files
set nobackup
