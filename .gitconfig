  name = nissy-dev

[core]
  editor = vi
  # ファイルの大文字・小文字を区別する
  ignorecase = false
  # 文字化け回避
  quotepath = false
  # 改行コードの変換を行わない
  autocrlf = false
  # global の gitignore
  # 自分の環境依存のものを登録する
  excludesfile = ~/.gitignore_global

[color]
  ui = true

[pull]
  rebase = false

[fetch]
  # pull する際に、リモートブランチの削除を反映する
  prune = true

[push]
  # upstreamを設定していなくてもpushされる
  default = current
  autoSetupRemote = true

[alias]
  al = !git config --get-regexp alias |  sed 's/^alias.//g' | sed 's/ / = /1'
  br = branch -a -vv
  ck = checkout
  co = commit
  cp = cherry-pick
  empty = commit --allow-empty
  pl = pull
  pr = !gh pr view --web
  ps = push
  psf = push --force-with-lease
  mr = merge
  save = stash save -u
  see = !gh repo view --web
  st = status

[diff]
  # https://ishiotks.hatenablog.com/entry/2019/11/07/125615
  algorithm = histogram

[grep]
  lineNumber = true

# git lfs のための設定
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

# ghq の設定
[ghq]
  root = ~/code
